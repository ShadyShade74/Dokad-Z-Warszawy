---
import Layout from './Layout.astro';
import Header from '../header/Header.astro';
import Footer from '../footer/Footer.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <Header />
  
  <article class="article-content">
    <div class="hero">
      <img src={frontmatter.image} alt={frontmatter.title} />
    </div>
    
    <div class="container">
      <h1>{frontmatter.title}</h1>
      <div class="metadata">
        <time>{frontmatter.date}</time>
        <span class="author">{frontmatter.author}</span>
      </div>
      
      <div class="content">
        <slot />
      </div>
    </div>
  </article>

  <Footer />
</Layout>

<style>
  .article-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  .hero {
    width: 100%;
    height: 400px;
    margin-bottom: 32px;
    border-radius: 12px;
    overflow: hidden;
  }

  .hero img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .container {
    padding: 0 20px;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 16px;
  }

  .metadata {
    color: #666;
    margin-bottom: 32px;
    font-size: 0.9rem;
  }

  .metadata > * + * {
    margin-left: 16px;
  }

  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
  }

  @media (max-width: 768px) {
    .article-content {
      padding: 16px;
    }

    .hero {
      height: 300px;
      margin-bottom: 24px;
    }

    .container {
      padding: 0 12px;
    }
  }
</style>