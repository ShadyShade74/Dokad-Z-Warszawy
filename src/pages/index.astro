<style>
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin: 50px 0;
  }
  @media (max-width: 1024px) {
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 600px) {
    .articles-grid {
      grid-template-columns: 1fr;
    }
  }
  .articles-grid > div {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px #0001;
    padding: 16px;
    box-sizing: border-box;
    transition: box-shadow 0.2s;
  }
  .articles-grid > div:hover {
    box-shadow: 0 4px 16px #0002;
  }
  .articles-grid img {
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
  }
  .search-input {
    width: 100%;
    max-width: 800px;
    height: 50px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
    margin: 50px auto;
    display: block;
    box-sizing: border-box;
  }
  @media (max-width: 600px) {
    .search-input {
      width: 95%;
      font-size: 14px;
      height: 40px;
      margin: 24px auto 32px auto;
      display: block;
    }
  }
  .show-more-btn {
    display: block;
    margin: 40px auto 60px auto;
    padding: 14px 36px;
    font-size: 18px;
    background: linear-gradient(90deg, #4e54c8, #8f94fb);
    color: #fff;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    transition:background 0.2s ease-in-out;
  }
  .show-more-btn:hover {
    background: linear-gradient(90deg, #8f94fb, #4e54c8);
  }
</style>
<script>
  const searchInput = document.querySelector(".search-input");
  const grid = document.querySelector(".articles-grid");
  const showMoreBtn = document.getElementById("show-more-btn");
  const allArticles = grid ? [...grid.querySelectorAll(":scope > div")] : [];
  let visibleCount = 9;

  function updateVisibleArticles() {
    allArticles.forEach((article, idx) => {
      article.style.display = idx < visibleCount ? "" : "none";
    });
    if (visibleCount >= allArticles.length) {
      showMoreBtn.style.display = "none";
    } else {
      showMoreBtn.style.display = "block";
    }
  }

  // Na starcie – pokaż tylko 9
  updateVisibleArticles();

  showMoreBtn?.addEventListener("click", () => {
    visibleCount += 6; // ile pokazać więcej na klik
    updateVisibleArticles();
  });

  function searchWord(e) {
    const currentWord = e.target.value.trim().toLowerCase();
    visibleCount = 9;
    allArticles.forEach(article => {
      if ((article.textContent || "").toLowerCase().includes(currentWord)) {
        article.style.display = "";
      } else {
        article.style.display = "none";
      }
    });
    // Po wyszukiwaniu, jeśli mniej niż 9 pasuje, chowaj guzik
    const visibleNow = allArticles.filter(a => a.style.display !== "none");
    if (visibleNow.length <= visibleCount) {
      showMoreBtn.style.display = "none";
    } else {
      showMoreBtn.style.display = "block";
    }
  }
  searchInput?.addEventListener("input", searchWord);
</script>
