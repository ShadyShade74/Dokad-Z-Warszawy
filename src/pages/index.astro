<style>
	.articles-grid li {
	background: #fff;
	border-radius: 12px;
	box-shadow: 0 2px 8px #0001;
	padding: 16px;
	width: 100%;
	box-sizing: border-box;
	}
	.articles-grid img {
	max-width: 100%;
	height: auto;
	display: block;
	border-radius: 8px;
	}
	ul, li {
	list-style: none;
	padding: 0;
	margin: 0;
	}
	.search-input {
	width: 100%;
	max-width: 800px;
	height: 50px;
	padding: 10px;
	border: 1px solid #ccc;
	border-radius: 4px;
	font-size: 16px;
	margin: 50px auto;
	display: block;
	box-sizing: border-box;
	}
	@media (max-width: 600px) {
		.search-input {
			width: 95%;
			font-size: 14px;
			height: 40px;
			margin: 24px auto 32px auto; /* większy odstęp na dole */
			display: block;
		}
		}
	.articles-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 24px;
		}
		@media (max-width: 1024px) {
		.articles-grid {
			grid-template-columns: repeat(2, 1fr);
		}
		}
		@media (max-width: 600px) {
		.articles-grid {
			grid-template-columns: 1fr;
		}
		}
	
</style>
<script>

	
	const searchInput = document.querySelector("input");
const grid = document.querySelector(".articles-grid");
const allLi = [...grid.querySelectorAll("li")];

function searchWord(e) {
  const currentWord = e.target.value.trim().toLowerCase();
  grid.innerHTML = "";
  allLi.forEach(li => {
    if (li.textContent.toLowerCase().includes(currentWord)) {
      grid.appendChild(li);
    }
  });
}

searchInput?.addEventListener("input", searchWord);


</script>
